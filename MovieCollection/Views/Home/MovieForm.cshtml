@model MovieCollection.Models.Application


@{
    ViewData["Title"] = "Movie Form";
}
@* Movie Form Page*@
<h1>Add a Movie</h1>
<form method="post">
    <input type="hidden" asp-for="MovieId"/>
    <br />
    @* Not required input*@
    <div class="form-group">
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category category in ViewBag.Categories){
                <option value="@category.CategoryID">@category.CategoryName</option>
            }
        </select>
    </div>
    @* Required input*@
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
    </div>
    @* Required input*@
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" type="number" class="form-control" required />
    </div>
    @* Required input*@
    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" required />
    </div>
    @* Required input*@
    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edited"></label>
        <select asp-for="Edited" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="LentTo"></label>
        <input asp-for="LentTo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CopiedToPlex"></label>
        <select asp-for="CopiedToPlex" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add Movie</button>

    <div asp-validation-summary="All"></div>
</form>

